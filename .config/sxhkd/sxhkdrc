#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# close and kill focused window
super + q
	bspc node -{c,k}

# change focus / move focused window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# preselect focused window
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused window
super + alt + space
	bspc node -p cancel

# switch to workspace
super + {1-9,0}
	desktop='^{1-9,10}'; \
	bspc query -D -d "$desktop.focused" && bspc desktop -f last || bspc desktop -f "$desktop"

# move focused container to workspace
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

# enter fullscreen mode for the focused container
super + shift + f
	bspc desktop -l next

# set the window state
super + shift + s
	bspc node focused -t \~floating

# expand/contract a tiled window
#super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0 || bspc node -z right -20 0, \
		bottom 0 20 || bspc node -z top 0 20,\
		top 0 -20 || bspc node -z bottom 0 -20,\
		right 20 0 || bspc node -z left 20 0}

# expand/contract a window with mouse
super + !button{1-3}
	bspc pointer -t %i %i

# make sxhkd reload its configuration files:
super + shift + c
	pkill -USR1 -x sxhkd

# quit/reload bspwm
super + shift + {End,r}
	bspc {quit,wm -r}


#----------------#
# BASIC BINDINGS #
#----------------#

# rofi
super + r
	rofi -modi run,drun -show drun -display-drun "run" -location 2 -yoffset 100 -width 38 -lines 12 -show-icons -drun-icon-theme

# PrtSc
Print
	scrot -s "$HOME/Pictures/%d-%m-%y_%H:%M:%S.png" -e 'xclip -selection clipboard -target image/png -i $f'

# discord
super + d
	apulse discord

# terminal emulator
super + Return
  xterm

# CLI File Manager
super + Tab
	xterm -e nnn

# GUI File Manager 
super + n
	thunar

# vim - code
super + c
	xterm -name code -e vim  

# vim - latex
super + w
	xterm -name latex -e vim

# Browser
super + f
	firefox

# Telegram
super + t
	telegram-desktop

# Copy url from firefox
super + m
	bash $HOME/.config/sxhkd/scripts/mpv.sh

# kill lag window
super + Escape
	xkill


#------------#
# MEDIA KEYS #
#------------#

# audio controls
XF86Audio{Raise,Lower}Volume
	amixer set Master {10%+,10%-}

XF86AudioMute
  amixer set Master toggle

# mic controls
super + XF86AudioMute
	$HOME/.config/sxhkd/scripts/mic-toggle.sh

# wi-fi controls
super + {Prior,Next}
	sudo /sbin/ip link set wlan0 {up,down}

# wi-fi menu
super + Home
  $HOME/.config/sxhkd/scripts/rofi-wifi-menu.sh wlan0 3 27 -47

# show/hide polybar
XF86Display
	$HOME/.config/sxhkd/scripts/bar-toggle.sh {hide,show}

#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# switch to workspace
super + {1-9,0}
  desktop='^{1-9,10}'; \
  bspc query -D -d "$desktop.focused" && bspc desktop -f last || bspc desktop -f "$desktop"

# move focused container to workspace
super + shift + {1-9,0}
  bspc node -d '^{1-9,10}'

# close and kill focused window
super + q
  bspc node -c

# change focus / move focused window
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# preselect focused window
super + alt + {h,j,k,l}
  bspc node -p {west,south,north,east}

# cancel the preselection for the focused window
super + alt + space
  bspc node -p cancel

# set the window state
super + shift + s
  bspc node focused -t \~floating

# make sxhkd reload its configuration files:
super + shift + c
  pkill -USR1 -x sxhkd

# quit/reload bspwm
super + shift + {End,r}
  bspc {quit,wm -r}


#----------------#
# BASIC BINDINGS #
#----------------#

# rofi
super + r
  rofi -modi run,drun -show drun -display-drun "run" -location 2 -yoffset 100 -width 38 -lines 12 -show-icons -drun-icon-theme

# PrtSc
Print
  sleep 0.1 && scrot -s '/tmp/%F_%T_$wx$h.png' -e 'xclip -selection clipboard -target image/png -i $f'

# discord
super + d
  discord

# terminal emulator
super + Return
  xterm

# CLI File Manager
super + Tab
  urxvtc -e lf

# GUI File Manager 
super + n
  thunar

# spotify
super + s
  spotify --no-zygote

# vim - code
super + c
  urxvtc -name code -e "cd /home/user/code/ && /usr/bin/vim" 

# vim - latex
super + w
  xterm -class latex -e 'cd $HOME/latex/ && nvim'

# Office 
super + o
  libreoffice

# Browser
super + f
  firefox

# Telegram
super + t
  telegram-desktop

# Copy url from firefox to mpv
super + m
  $HOME/.config/sxhkd/scripts/youtube.sh

# kill lag window
super + Escape
  xkill


#------------#
# MEDIA KEYS #
#------------#

# audio controls
XF86Audio{Lower,Raise}Volume
  pactl -- set-sink-volume 0 {-10%,+10%}

# audio/mic mute
super + XF86AudioLowerVolume
  pactl set-sink-mute @DEFAULT_SINK@ toggle

super + XF86AudioRaiseVolume
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Toggle play/pause state
XF86AudioPlay 
  playerctl play-pause

# Skip to the next song in the play list
XF86AudioNext
  playerctl next

# Play the previous song in the play list
XF86AudioPrev
  playerctl previous

# wi-fi menu
super + Insert
  iwgtk 

super + Home
  blueman-manager

super + Prior
  pavucontrol -t 1

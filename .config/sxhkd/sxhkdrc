#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# close and kill focused window
super + q
	bspc node -{c,k}

# change focus / move focused window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# preselect focused window
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# cancel the preselection for the focused window
super + alt + space
	bspc node -p cancel

# switch to workspace
super + {1-9,0}
	desktop='^{1-9,10}'; \
	bspc query -D -d "$desktop.focused" && bspc desktop -f last || bspc desktop -f "$desktop"





# move focused container to workspace
super + shift + {1-9,0}
	bspc node -d '^{1-9,10}'

# enter fullscreen mode for the focused container
super + shift + f
	bspc desktop -l next

# set the window state
super + shift + s
	bspc node focused -t \~floating

# expand/contract a tiled window
super + ctrl + {h,j,k,l}
	bspc node -z {left -20 0 || bspc node -z right -20 0, \
		bottom 0 20 || bspc node -z top 0 20,\
		top 0 -20 || bspc node -z bottom 0 -20,\
		right 20 0 || bspc node -z left 20 0}

# expand/contract a window with mouse
super + !button{1-3}
	bspc pointer -t %i %i

# make sxhkd reload its configuration files:
super + shift + c
	pkill -USR1 -x sxhkd

# quit/reload bspwm
super + shift + {End,r}
	bspc {quit,wm -r}


#----------------#
# BASIC BINDINGS #
#----------------#

# rofi
super + r
	rofi -modi run,drun -show drun -location 2 -yoffset 150 -line-padding 4 -columns 1 -width 25 -lines 10 -padding 15 -hide-scrollbar -show-icons -drun-icon-theme

# flameshoft
Print
	flameshot gui

# discord
super + d
	discord

# terminal emulator
super + Return
        alacritty

# File Manager - ranger
super + Tab
	alacritty --class ranger -e ranger

# File Manager - nautilus
super + n
	nautilus

# vim - code
super + c
	alacritty --class code  

# vim - latex
super + w
	alacritty --class latex

# Browser
super + f
	firefox

# Virtual Box
super + v
	VirtualBox

# Telegram
super + t
	telegram-desktop

# reload autorandr
super + Home
	autorandr -c

# kill lag window
super + Escape
	xkill


#------------#
# MEDIA KEYS #
#------------#

# audio controls
XF86Audio{Raise,Lower}Volume
	pactl set-sink-volume @DEFAULT_SINK@ {+10%,-10%}

XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle

# mic controls
super + XF86Audio{Raise,Lower}Volume
	pactl set-source-volume @DEFAULT_SOURCE@ {+10%,-10%}

XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle

# screen brightness controls
XF86MonBrightness{Up,Down}
	sudo /sbin/light {-A 10,-U 10}

# wi-fi controls
super + {Prior,Next}
	sudo /sbin/ip link set wlan0 {up,down}

# show/hide polybar
XF86Display
	/home/user/.config/polybar/scripts/bar-toggle.sh {hide,show}

# on/off touchpad
F2
	/home/user/.config/sxhkd/scripts/touchpad.sh

#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# switch to workspace
super + {1-9,0}
  desktop='^{1-9,10}'; \
  bspc query -D -d "$desktop.focused" && bspc desktop -f last || bspc desktop -f "$desktop"

# move focused container to workspace
super + shift + {1-9,0}
  bspc node -d '^{1-9,10}'

# close and kill focused window
super + q
  bspc node -c
#bspc node -{c,k}

# change focus / move focused window
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# preselect focused window
super + alt + {h,j,k,l}
  bspc node -p {west,south,north,east}

# cancel the preselection for the focused window
super + alt + space
  bspc node -p cancel

# set the window state
super + shift + s
  bspc node focused -t \~floating

# make sxhkd reload its configuration files:
super + shift + c
  pkill -USR1 -x sxhkd

# quit/reload bspwm
super + shift + {End,r}
  bspc {quit,wm -r}


#----------------#
# BASIC BINDINGS #
#----------------#

# rofi
super + r
  rofi -modi run,drun -show drun -display-drun "run" -location 2 -yoffset 100 -width 38 -lines 12 -show-icons -drun-icon-theme

# PrtSc
Print
  sleep 0.1 && scrot -s "$HOME/Pictures/%d-%m-%y_%H:%M:%S.png" -e 'ls $f | xsel -ib'

# discord
super + d
  apulse discord

# terminal emulator
super + Return
  urxvtc

# CLI File Manager
super + Tab
  urxvtc -e nnn -C

# GUI File Manager 
super + s
  spacefm

# vim - code
super + c
  urxvtc -name code -e "cd /home/user/code/ && /usr/bin/vim" 

# vim - latex
super + w
  xterm -class latex -e 'cd $HOME/latex/ && nvim'

# libre ms office :)
super + o
  libreoffice

# Browser
super + f
  firefox &

# Telegram
super + t
  telegram-desktop

# Copy url from firefox to mpv
super + m
  $HOME/.config/sxhkd/scripts/youtube.sh

# kill lag window
super + Escape
  xkill

# suspend with lock
X86Sleep
  xset dpms force suspend && slock

#------------#
# MEDIA KEYS #
#------------#

# audio controls
XF86Audio{Raise,Lower}Volume
  amixer set Master {10%+,10%-}

# audio/mic mute
super + XF86AudioLowerVolume
  pactl set-sink-mute @DEFAULT_SINK@ toggle

super + XF86AudioRaiseVolume
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

# wi-fi menu
super + Insert
  . $HOME/.config/sxhkd/scripts/rofi-wifi-menu.sh wlan0 3 27 -47

super + Home
  blueman-manager

super + Prior
  pavucontrol -t 1

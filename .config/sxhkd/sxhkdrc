#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# switch to workspace
super + {1-9,0}
  desktop='^{1-9,10}'; \
  bspc query -D -d "$desktop.focused" && bspc desktop -f last || bspc desktop -f "$desktop"

# move focused container to workspace
super + shift + {1-9,0}
  bspc node -d '^{1-9,10}'

# close and kill focused window
super + q
  bspc node -{c,k}

# change focus / move focused window
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# preselect focused window
super + alt + {h,j,k,l}
  bspc node -p {west,south,north,east}

# cancel the preselection for the focused window
super + alt + space
  bspc node -p cancel

# set the window state
super + shift + s
  bspc node focused -t \~floating

# make sxhkd reload its configuration files:
super + shift + c
  pkill -USR1 -x sxhkd

# quit/reload bspwm
super + shift + {End,r}
  bspc {quit,wm -r}


#----------------#
# BASIC BINDINGS #
#----------------#

# rofi
super + r
  rofi -modi run,drun -show drun -display-drun "run" -location 2 -yoffset 100 -width 38 -lines 12 -show-icons -drun-icon-theme

# PrtSc
Print
  scrot -s "$HOME/Pictures/%d-%m-%y_%H:%M:%S.png" -e 'xclip -selection clipboard -target image/png -i $f'

# discord
super + d
  apulse discord

# terminal emulator
super + Return
  xterm

# CLI File Manager
super + Tab
  xterm -e nnn

# GUI File Manager 
super + n
  thunar

# vim - code
super + c
  xterm -class code -e 'cd $HOME/code/ && nvim' 

# vim - latex
super + w
  xterm -class latex -e 'cd $HOME/latex/ && nvim'

# libre ms office :)
super + o
  libreoffice

# Browser
super + f
  firefox

# Telegram
super + t
  telegram-desktop

# Copy url from firefox to mpv
super + m
  $HOME/.config/sxhkd/scripts/youtube.sh

# kill lag window
super + Escape
  xkill


#------------#
# MEDIA KEYS #
#------------#

# audio controls
XF86Audio{Raise,Lower}Volume
  amixer set Master {10%+,10%-}

XF86AudioMute
  amixer set Master toggle

# mic controls
super + XF86AudioMute
  $HOME/.config/sxhkd/scripts/mic-toggle.sh

# wi-fi controls
super + {Prior,Next}
  sudo /sbin/ip link set wlan0 {up,down}

# wi-fi menu
super + Home
  bash $HOME/.config/sxhkd/scripts/menu.sh wlan0 3 27 -47

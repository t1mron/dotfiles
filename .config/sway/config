#--------#
# BASICS #
#--------#

# mod
set $mod Mod4
set $alt Mod1

# font
font pango:monospace 8

# Automatic back-and-forth when switching to the current workspace
workspace_auto_back_and_forth yes

# disable the focuse of mouse
focus_follows_mouse no

#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# drag floating key
floating_modifier $alt

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# toggle split
#bindsym $mod+Shift+d layout toggle tabbed split

# toggle tiling / floating
bindsym $mod+Shift+x floating toggle, resize set 1280 720, move position center

# enter fullscreen mode for the focused container
bindsym $mod+Shift+f fullscreen toggle

# Make the currently focused window a scratchpad
bindsym $mod+Shift+z move scratchpad

# Show the first scratchpad window
bindsym $mod+z scratchpad show

# set workspace name 
set $ws1 "1" 
set $ws2 "2" 
set $ws3 "3" 
set $ws4 "4" 
set $ws5 "5" 
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# set monitor name
set $eDP eDP
set $HDMI HDMI-A-0

# pin workspace to monitor
workspace $ws1 output  $eDP 
workspace $ws2 output  $eDP 
workspace $ws3 output  $eDP 
workspace $ws4 output  $eDP 
workspace $ws5 output  $eDP  
workspace $ws6 output  $eDP
workspace $ws7 output  $eDP
workspace $ws8 output  $HDMI
workspace $ws9 output  $HDMI
workspace $ws10 output $HDMI

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# move focused container to another screen
bindsym $mod+Up move container to output up
bindsym $mod+Down move container to output down

mode "" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym k resize grow height 10 px or 10 ppt
	bindsym j resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	bindsym Escape mode "default"
}

bindsym $mod+Shift+r mode ""

# reload i3 config
bindsym $mod+Shift+c reload 

# exit i3
bindsym $mod+Shift+End exit

# kill lag window
bindsym $mod+Escape exec xkill

# keyboard layout
input * {
  xkb_layout "us,ru"
  xkb_options "grp:alt_shift_toggle"
  xkb_model "pc105"
}

input "2:10:TPPS/2_IBM_TrackPoint" {
  scroll_method on_button_down
  natural_scroll disabled
  #scroll_button button["4"]
}




#----------------#
# BASIC BINDINGS #
#----------------#

# rofi 
bindsym $mod+r exec "rofi -modi run,drun -show drun"

# print screen
bindsym Print exec grim -g "$(slurp)" - | wl-copy  


# discord
bindsym $mod+d exec discord

# terminal
bindsym $mod+Return exec urxvtc

# CLI File Manager
bindsym $mod+Tab exec urxvtc -e lf

# GUI File Manager
bindsym $mod+n exec thunar 

# Firefox	
bindsym $mod+f exec MOZ_ENABLE_WAYLAND=1 firefox

# Libreoffice
bindsym $mod+w exec libreoffice

# Telegram
bindsym $mod+t exec telegram-desktop

# spotify
bindsym $mod+s exec spotify --no-zygote

#------------#
# APPEARANCE #
#------------#

# window border
default_border pixel 2

set $clr #00bfff

# class       	  border backgr text  indicator child_border
client.focused    $clr   $clr   $clr  $clr      $clr
#client.unfocused $clr     
client.urgent     $clr   $clr   $clr  $clr      $clr


#----------------------#
# STARTUP APPLICATIONS #
#----------------------#

# wallpaper
output * bg $HOME/Wallpapers/owl.jpg fill

exec $HOME/.config/waybar/scripts/launch.sh &
exec_always urxvtd -q -f -o &
exec_always alternating_layouts.py &

# Disable wi-fi
#sudo /sbin/ip link set wlan0 down &
# Disable eth
#sudo /sbin/ip link set enp1s0 down &
# Disable headphone/mic
exec_always pactl set-sink-mute @DEFAULT_SINK@ 1 &
exec_always set-source-mute @DEFAULT_SOURCE@ 1 &

#---------------#
# SPECIAL CASES #
#---------------#

# browser/library	
for_window [class="Library"]             			floating enable, resize set 1280 720, move position center
# iwgtk
for_window [app_id="iwgtk"]					floating enable, resize set 1280 720, move position center
# pavucontrol
for_window [app_id="pavucontrol"]				floating enable, resize set 1280 720, move position center
# sxiv
for_window [class="Sxiv"]				        floating enable, resize set 1280 720, move position center
# mpv
#for_window [class="mpv"]      					fullscreen enable
# blueman
for_window [app_id="blueberry"]				floating enable, resize set 1280 720, move position center


#------------#
# MEDIA KEYS #
#------------#

# audio controls
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10% 
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10% 

# audio/mic mute
bindsym $mod+XF86AudioLowerVolume exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym $mod+XF86AudioRaiseVolume exec pactl set-source-mute @DEFAULT_SOURCE@ toggle 

# Toggle play/pause state
bindsym XF86AudioPlay exec playerctl play-pause

# Skip to the next song in the play list
bindsym XF86AudioNext exec playerctl next

# Play the previous song in the play list
bindsym XF86AudioPrev exec playerctl previous

# wi-fi
bindsym $mod+Insert exec iwgtk 
#bluetooth
bindsym $mod+Home exec blueberry
#sound
bindsym $mod+Prior exec pavucontrol -t 1


#-------------#
# ASSIGNMENTS #
#-------------#

assign [app_id="firefox"] $ws2
assign [app_id="Zathura"] $ws4
assign [app_id="libreoffice"] $ws4
assign [class="TelegramDesktop"] $ws5
assign [class="discord"] $ws5
assign [app_id="obs"] $ws6
assign [app_id="mpv"] $ws6
assign [app_id="Spotify"] $ws6
assign [app_id="Virt-manager"] $ws7

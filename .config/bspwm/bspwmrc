#! /bin/sh

#--------#
# BASICS #
#--------#

pgrep -x sxhkd > /dev/null || sxhkd &

bspc monitor -d I II III IV V VI VII VIII IX X

bspc config border_width         2
bspc config window_gap         	 0

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config focused_border_color \#00bfff
bspc config normal_border_color  \#cccccc


#-------#
# RULES #
#-------#

#bspc rule -a Alacritty           desktop='^1' follow=true
#bspc rule -a "*:ranger"          desktop='^1' follow=true
bspc rule -a firefox         	    desktop='^2'
bspc rule -a "*:code"             desktop='^3' follow=true
bspc rule -a "*:latex"            desktop='^4' follow=true
bspc rule -a Zathura 	     	      desktop='^4' state=tiled follow=on
bspc rule -a TelegramDesktop 	    desktop='^5' follow=on
bspc rule -a discord              desktop='^5' state=tiled
bspc rule -a zoom                 desktop='^5' state=tiled follow=on
bspc rule -a Virt-manager         desktop='^6'

bspc rule -a Pavucontrol          state=floating center=true rectangle=900x500+0+0
bspc rule -a Blueman-manager      state=floating center=true rectangle=900x500+0+0

#----------------------#
# STARTUP APPLICATIONS #
#----------------------#

# status bar
/home/user/.config/polybar/scripts/launch.sh

# change keyboard layout
setxkbmap -option grp:alt_shift_toggle us,ru &

#color temperature
redshift -c ~/.config/redshift/redshift.conf &

#exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &

# Disable touchpad
xinput disable "SYNA30AC:00 06CB:CDEB Touchpad" &

# Disable wi-fi
sudo /sbin/ip link set wlan0 down &

# Disable eth
#exec --no-startup-id sudo /sbin/ip link set enp1s0 down &

# Disable volume/mic
pactl set-sink-mute @DEFAULT_SINK@ 1 &
pactl set-source-mute @DEFAULT_SOURCE@ 1 &

# Solid color background
xsetroot -solid "#cccccc" &

# Disable screen blanking
xset -dpms s off &

# network manager tray
nm-applet &

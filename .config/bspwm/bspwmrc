#! /bin/sh

#--------#
# BASICS #
#--------#

ws1='' # terminal
ws2='' # browser
ws3='' # coding
ws4='' # office
ws5='' # social network
ws6='' # media
ws7='' # virtualization
ws8='' # external monitor
ws9='' # external monitor
ws10='' # external monitor

bspc monitor -d $ws1 $ws2 $ws3 $ws4 $ws5 $ws6 $ws7 $ws8 $ws9 $ws10

bspc config border_width         2
bspc config window_gap         	 0

bspc config split_ratio          0.5
bspc config borderless_monocle   true
bspc config gapless_monocle      true

bspc config focused_border_color \#00bfff
bspc config normal_border_color  \#cccccc


#-------#
# RULES #
#-------#

bspc rule -a Firefox        	       desktop='^2' state=tiled follow=on
bspc rule -a code                    desktop='^3' state=tiled follow=on
bspc rule -a latex                   desktop='^4' state=tiled follow=on 
bspc rule -a Soffice                 desktop='^4' state=tiled follow=on
bspc rule -a libreoffice-startcenter desktop='^4' state=tiled follow=on
bspc rule -a Zathura 	     	         desktop='^4' state=tiled follow=on focus=off split_ratio=0.65
bspc rule -a TelegramDesktop 	       desktop='^5' state=tiled follow=on
bspc rule -a discord                 desktop='^5' state=tiled follow=on
bspc rule -a mpv                     desktop='^6' state=tiled follow=on
bspc rule -a Virt-manager            desktop='^7' state=tiled follow=on
bspc rule -a qBittorrent             desktop='^7' state=tiled follow=on

#bspc rule -a Blueman-manager      state=floating center=true rectangle=900x500+0+0
bspc rule -a Sxiv      state=floating center=true 


#----------------------#
# STARTUP APPLICATIONS #
#----------------------#

pgrep -x sxhkd > /dev/null || sxhkd &

# enable siji bitmap font
xset +fp $HOME/.fonts/Siji/ &
xset fp rehash &

# lemonbar
PANEL=$HOME/.config/lemonbar

pkill -f $PANEL/panel.sh
setsid $PANEL/panel.sh & 

# change keyboard layout
#setxkbmap -option grp:alt_shift_toggle us,ru &

# Solid color background
xsetroot -solid "#cccccc" &

# Add mouse cursor support 
xsetroot -cursor_name left_ptr &

# Disable screen blanking
xset -dpms s off &

# Disable wi-fi
#sudo /sbin/ip link set wlan0 down &

# Disable eth
#sudo /sbin/ip link set enp1s0 down &

# Disable headphone/mic
#amixer set Master mute
amixer set Capture 0%

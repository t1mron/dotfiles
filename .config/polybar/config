[colors]
foreground = #333333
background = #FFFFFF
primary= #cccccc
warn = #f00


[bar/top]
monitor = ${env:MONITOR:}
enable-ipc = true

# Dimensions
height = 22

# Fonts
font-0 = DejaVu Sans Mono:size=9;2
font-1 = FontAwesome:size=12;2

# Colors
background = ${colors.background}
foreground = ${colors.foreground}

# Misc
fixed-center = true
padding= 1
module-margin = 1
wm-restack = bspwm

# Modules
modules-left = battery cpu memory temp filesystem
modules-center = bspwm
modules-right = wi-fi alsa-master mic backlight keyboard time  


# LEFT

[module/battery]
type = internal/battery

battery = BAT0
adapter = AC

full-at = 100

format-full = <ramp-capacity> <label-full>
format-charging = <ramp-capacity> <label-charging>
format-discharging = %{F#999999}<ramp-capacity>%{F-} <label-discharging>

label-full = 99%
label-charging = %percentage%%
label-discharging = %percentage%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 =  


[module/cpu]
type = internal/cpu
label =  %percentage:3%%


[module/memory]
type = internal/memory
label =  %gb_used%


[module/temp]
type = internal/temperature

thermal-zone = 0

hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp3_input

warn-temperature = 60

label =  %temperature-c%
label-warn =  %temperature-c%
label-warn-foreground = ${colors.warn}


[module/filesystem]
type = internal/fs
mount-0 = /

label-mounted =  %free%


# CENTER

[module/bspwm]
type = internal/bspwm

ws-icon-0 = I;
ws-icon-1 = II;
ws-icon-2 = III;
ws-icon-3 = IV;
ws-icon-4 = V;
ws-icon-5 = VI;
ws-icon-6 = VII;
ws-icon-7 = VIII;
ws-icon-8 = IX;
ws-icon-9 = X;

pin-workspaces = true
enable-click = false
enable-scroll = false

format = <label-state> <label-mode>

label-mode = %mode%
label-mode-padding = 1

label-focused = %icon%

#-----------------------------#
# WINDOW / WORKSPACE COMMANDS #
#-----------------------------#

# switch to workspace
super + {1-9,0}
  desktop='^{1-9,10}'; \
  bspc query -D -d "$desktop.focused" && bspc desktop -f last || bspc desktop -f "$desktop"

# move focused container to workspace
super + shift + {1-9,0}
  bspc node -d '^{1-9,10}'

# close and kill focused window
super + {_,shift + }q
  bspc node -{c,k}

# change focus / move focused window
super + {_,shift + }{h,j,k,l}
  bspc node -{f,s} {west,south,north,east}

# set the window state
super + shift + s
  bspc node focused -t \~floating

# fullscreen
super + shift + f 
  bspc node -t \~fullscreen

# reload sxhkd config
super + shift + c
  pkill -USR1 -x sxhkd

# reload bspwm
super + shift + r
  $HOME/.config/bspwm/bspwmrc

# quit bspwm
super + shift + End
  bspc quit

#----------------#
# BASIC BINDINGS #
#----------------#

# rofi
super + space
  rofi -show drun -theme Arc

# PrtSc
super + Print
  flameshot gui

# discord
super + d
  flatpak run com.discordapp.Discord

# terminal emulator
super + Return
  xterm

# GUI File Manager
super + n
  Thunar

# CLI File Manager
super + Tab
  xterm -e lf

# Browser
super + f
  firefox

# Telegram
super + t
  telegram-desktop

# Virtualization
super + v
  virt-manager

# Libre office
super + o
  libreoffice

# Copy url from firefox to mpv
super + m
  $HOME/.config/sxhkd/scripts/youtube.sh

# kill lag window
super + Escape
  xkill

#------------#
# MEDIA KEYS #
#------------#

# Lock screen
XF86ScreenSaver
  slock

# audio controls
XF86Audio{Lower,Raise}Volume
  pactl -- set-sink-volume 0 {-10%,+10%}

# audio/mic mute
super + XF86AudioLowerVolume
  pactl set-sink-mute @DEFAULT_SINK@ toggle

super + XF86AudioRaiseVolume
  pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Toggle status bar
XF86Launch1
  $HOME/.config/sxhkd/scripts/polybar_toggle.sh

# Toggle play/pause state
XF86AudioPlay 
  playerctl play-pause

# Skip to the next song in the play list
XF86AudioNext
  playerctl next

# Play the previous song in the play list
XF86AudioPrev
  playerctl previous

# wi-fi menu
super + Insert
  iwgtk 

# bluetooth menu
super + Home
  blueman-manager

# sound/mic menu
super + Prior
  pavucontrol -t 1

[colors]
foreground = #333333
background = #FFFFFF
primary= #cccccc
warn = #f00

[bar/top]
monitor = ${env:MONITOR:}
enable-ipc = true

# Dimensions
height = 18

# Fonts
font-0 = DejaVu Sans Mono:size=9;2
font-1 = Font Awesome 5 Free:style=Solid:size=9;2
font-2 = Font Awesome 5 Brands:size=9;2
font-3 = siji:style=Regular:size=9;2

# Colors
background = ${colors.background}
foreground = ${colors.foreground}

# Misc
fixed-center = true
padding= 1
module-margin = 1
override-redirect = true
wm-restack = bspwm

# Modules
modules-left = battery cpu memory temp filesystem update
modules-center = bspwm
modules-right = wifi bluetooth head mic backlight keyboard time

# LEFT

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 100
format-full = <ramp-capacity> <label-full>
format-charging = <ramp-capacity> <label-charging>
format-discharging = %{F#999999}<ramp-capacity>%{F-} <label-discharging>
label-full = 99%
label-charging = %percentage%%
label-discharging = %percentage%%
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 =  

[module/cpu]
type = internal/cpu
label =  %percentage:3%%

[module/memory]
type = internal/memory
label =  %gb_used%

[module/temp]
type = internal/temperature
thermal-zone = 0
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon4/temp3_input
warn-temperature = 70
label =  %temperature-c%
label-warn =  %temperature-c%
label-warn-foreground = ${colors.warn}

[module/filesystem]
type = internal/fs
mount-0 = /
label-mounted =  %free%

[module/update]
type = custom/script
exec = $HOME/.config/polybar/scripts/update.sh
interval = 600 

# CENTER

[module/bspwm]
type = internal/bspwm
ws-icon-0 = I;
ws-icon-1 = II;
